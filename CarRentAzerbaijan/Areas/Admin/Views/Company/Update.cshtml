@*﻿
@{
    Layout = "_AdminLayoutTwo";
}*@

@model CompanyUpdateDto

<div class="container my-2">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Şirkət</h5>
                </div>
                <div class="card-body">
                    <form method="post">


                       <div class="row g-2">

                            <div class="col-6 form-group">
                                <label asp-for="Name" class="form-label">Ad</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-6 form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                       </div>


                        <div class="row g-2">

                            <div class="col-6 form-group">
                                <label asp-for="Phone" class="form-label">Telefon</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-6 form-group">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="CompanyDescription" class="form-label">Şirkət Haqqında</label>
                            <textarea asp-for="CompanyDescription" class="form-control"></textarea>
                            <span asp-validation-for="CompanyDescription" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Yenilə</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri qayıt</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}